<?xml version="1.0" encoding="utf-8"?>

<Window
    x:Class="WebCatWinui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebCatWinui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WebCatWinui">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
            CornerRadius="8"
            Padding="16"
            RowSpacing="12"
            ColumnSpacing="8"
            BorderThickness="1"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Query</TextBlock>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Bind _viewModel.Query, Mode=TwoWay}"/>
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ColumnSpacing="4" Padding="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" 
                        VerticalAlignment="Center"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" />
                <TextBlock Grid.Column="1">Ai</TextBlock>
                <Border Grid.Column="2" 
                        VerticalAlignment="Center"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" />
            </Grid>
            <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Endpoint</TextBlock>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{x:Bind _viewModel.Endpoint, Mode=TwoWay}"/>
            <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Api Key</TextBlock>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{x:Bind _viewModel.ApiKey, Mode=TwoWay}"/>
            <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Model</TextBlock>
            <ComboBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" Text="{x:Bind _viewModel.Model, Mode=TwoWay}">
                <x:String>deepseek-chat</x:String>
                <x:String>deepseek-reasoner</x:String>
            </ComboBox>
            <TextBlock Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Temperature</TextBlock>
            <Slider Grid.Row="5" Grid.Column="1" Minimum="0" Maximum="2" StepFrequency="0.1" Value="{x:Bind _viewModel.Temperature, Mode=TwoWay}"/>
            <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" ColumnSpacing="4" Padding="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" 
                        VerticalAlignment="Center"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" />
                <TextBlock Grid.Column="1" VerticalAlignment="Center">Browser</TextBlock>
                <Border Grid.Column="2" 
                        VerticalAlignment="Center"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" />
            </Grid>
            <TextBlock Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Browser Type</TextBlock>
            <ComboBox Grid.Row="7" Grid.Column="1" HorizontalAlignment="Stretch">
                <x:String>Chrome</x:String>
                <x:String>Edge</x:String>
            </ComboBox>
            <TextBlock Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Fresh Interval</TextBlock>
            <NumberBox Grid.Row="8" Grid.Column="1" PlaceholderText="Milliseconds" Value="{x:Bind _viewModel.Interval}"/>
            <TextBlock Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">Headless</TextBlock>
            <CheckBox Grid.Row="9" Grid.Column="1" IsChecked="{x:Bind _viewModel.IsHeadless}"/>
        </Grid>
        <Button Grid.Row="1" Style="{ThemeResource AccentButtonStyle}" HorizontalAlignment="Stretch">启动！</Button>
    </Grid>
</Window>